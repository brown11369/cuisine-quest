{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Output & Module */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* React */
    "jsx": "react-jsx",

    /* Libraries */
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* TS behavior */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true,

    /* Quality checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path alias (TS7-safe, no baseUrl needed) */
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Vite types */
    "types": ["vite/client"]
  },

  "include": ["src"]
}
